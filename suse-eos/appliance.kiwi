        <package name="ca-certificates-mozilla"/>
        <package name="xz"/>
        <package name="grep"/>
        <package name="EOS-Embedded-release"/>
    </packages>
    <packages type="delete" profiles="AB,EC2,RPI">
        <!-- it is in the registry now, so we can delete the package -->
        <!-- <package name="core-image"/> -->
    </packages>
    <packages type="delete" profiles="AB,EC2,RPI">
        <package name="basesystem-image"/>
        <package name="fleet-image"/>
    </packages>
    <packages type="delete" profiles="AB,Static,RPI,EC2">
        <package name="binutils"/>
        <package name="btrfsprogs-udev-rules"/>
        <package name="btrfsprogs"/>
        <package name="dialog"/>
        <package name="elfutils"/>
        <package name="fillup"/>
        <package name="fuse-overlayfs"/>
        <package name="gawk"/>
        <package name="gettext-runtime"/>
        <package name="info"/>
        <package name="lvm2"/>
        <package name="mdadm"/>
        <package name="parted"/>
        <package name="perl-Bootloader"/>
        <package name="pigz"/>
        <package name="pv"/>
        <package name="slirp4netns"/>
        <package name="thin-provisioning-tools"/>
        <package name="zstd"/>
        <package name="zypper"/>
    </packages>
</image>
